{
  "buildCommand": "npm run build",
  "outputDirectory": "out",
  "framework": "vite",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/produto/:uuid([0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12})",
      "destination": "/api/redirect-product?uuid=:uuid"
    },
    {
      "source": "/product/:uuid([0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12})",
      "destination": "/api/redirect-product?uuid=:uuid"
    },
    {
      "source": "/categoria/:uuid([0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12})",
      "destination": "/api/redirect-category?uuid=:uuid"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
